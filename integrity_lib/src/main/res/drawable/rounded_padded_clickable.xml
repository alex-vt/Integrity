<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorTranslucentGray" />
            <corners
                android:radius="25dp" />
            <stroke android:width="6dp" android:color="@color/colorNone" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorNone" />
            <corners
                android:radius="25dp" />
            <stroke android:width="6dp" android:color="@color/colorNone" />
        </shape>
    </item>

</selector>