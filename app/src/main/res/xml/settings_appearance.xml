<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <PreferenceCategory app:title="Colors">

        <Preference
            app:key="appearance_color_background"
            app:title="Theme"
            app:summary="Background color"
            />

        <Preference
            app:key="appearance_color_main"
            app:title="Main color"
            app:summary="Common color for items and buttons"
            />

        <Preference
            app:key="appearance_color_accent"
            app:title="Accent color"
            app:summary="Highlights some items and buttons"
            />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Text"
        >

        <Preference
            app:key="appearance_text_font"
            app:title="Font"
            app:summary="Roboto"/>

        <Preference
            app:key="appearance_text_size"
            app:title="Text size"
            app:summary="Normal"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>