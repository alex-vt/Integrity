<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llItem"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tvSnapshotTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                tools:text="Snapshot Title"
                android:layout_toLeftOf="@+id/tvSnapshotDate"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/tvSnapshotDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:textSize="12.5sp"
                tools:text="Date and time"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:text="Text\ntext"
            />

        <TextView
            android:id="@+id/tvRelevantLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            tools:text="Link text"
            android:background="@color/colorShade"
            android:padding="5dp"
            />

    </LinearLayout>

</layout>