<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alexvt.integrity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:name=".android.App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        >


        <activity android:name="com.alexvt.integrity.android.ui.splash.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar.Splash"
            android:launchMode="singleTop"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.alexvt.integrity.android.ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>

        <activity
            android:name="com.alexvt.integrity.android.ui.log.LogViewActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            >
        </activity>

        <activity
            android:exported="true"
            android:name="com.alexvt.integrity.android.ui.destinations.DestinationsActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:exported="true"
            android:name="com.alexvt.integrity.android.ui.tags.TagsActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.alexvt.integrity.android.ui.destinations.local.LocalDestinationActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.alexvt.integrity.android.ui.destinations.samba.SambaDestinationActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.alexvt.integrity.android.ui.settings.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.alexvt.integrity.android.ui.recovery.RecoveryActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.alexvt.integrity.android.ui.info.HelpInfoActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.alexvt.integrity.android.ui.info.LegalInfoActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver android:name="com.alexvt.integrity.android.operations.snapshots.AndroidSnapshotOperationManager$SnapshotProgressReceiver" >
            <intent-filter>
                <action android:name="com.alexvt.integrity.SNAPSHOT_DOWNLOAD_PROGRESS" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.alexvt.integrity.android.data.log.LogEventReceiver$LogEntryReceiver" >
            <intent-filter>
                <action android:name="com.alexvt.integrity.LOG_ENTRY_ADDED" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.alexvt.integrity.lib.android.operations.log.AndroidLogManager$LogEntryRecoveryReceiver"
            android:process=":recovery"
            >
            <intent-filter>
                <action android:name="com.alexvt.integrity.CRASH_RECOVERY" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.alexvt.integrity.android.data.log.LogEventReceiver$LogReadReceiver" >
            <intent-filter>
                <action android:name="com.alexvt.integrity.LOG_READ" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.alexvt.integrity.android.operations.notifications.ScheduledJobsEnableReceiver" >
            <intent-filter>
                <action android:name="com.alexvt.integrity.ENABLE_SCHEDULED_JOBS" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.alexvt.integrity.android.util.AppOpenReceiver" >
            <intent-filter>
                <action android:name="com.alexvt.integrity.APP_OPEN" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.alexvt.integrity.android.util.AppReopenReceiver"
            android:process=":restart"
            >
            <intent-filter>
                <action android:name="com.alexvt.integrity.APP_REOPEN" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.alexvt.integrity.android.AutoStartReceiver"
            >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>


        <!-- Included data types -->

        <activity
            android:name=".android.ui.types.blog.BlogTypeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.alexvt.integrity.ACTION_VIEW" />
            </intent-filter>
        </activity>

        <service
            android:name="com.alexvt.integrity.android.operations.types.blog.BlogTypeService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            >
            <intent-filter>
                <action android:name="com.alexvt.integrity.SNAPSHOT_DOWNLOAD" />
            </intent-filter>
        </service>

    </application>

</manifest>