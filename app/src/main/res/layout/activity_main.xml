<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".base.activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".base.activity.MainActivity"
        tools:showIn="@layout/activity_main">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSnapshotList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rvSearchResults"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvNoResults"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="No results"
            android:gravity="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.leinardi.android.speeddial.SpeedDialView
        android:id="@+id/sdAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/llBottomSheet"
        app:layout_anchorGravity="top|end"
        app:layout_insetEdge="bottom"
        app:layout_dodgeInsetEdges="bottom"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="-37dp"
        app:sdExpansionMode="top"
        app:sdMainFabOpenedBackgroundColor="?attr/colorAccent"
        app:sdMainFabClosedBackgroundColor="?attr/colorAccent"
        app:sdMainFabClosedSrc="@android:drawable/ic_input_add"
        app:sdMainFabOpenedSrc="@android:drawable/ic_menu_close_clear_cancel"
        />

    <!-- Bottom sheet -->
    <LinearLayout
        android:id="@+id/llBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="?attr/backgroundColor"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="118dp"
        android:elevation="10dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:clickable="true"
        >

        <!-- Header of bottom sheet -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vPullUpTab"
                android:layout_width="50dp"
                android:layout_height="4.5dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/darker_gray" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/svMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconifiedByDefault="false"
                app:queryBackground="@color/colorNone"
                android:voiceSearchMode="showVoiceSearchButton|launchRecognizer"
                app:queryHint="Search"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/rounded_white"
                android:imeOptions="actionSearch"
                android:layout_below="@+id/vPullUpTab"
                android:inputType="text"
                />

            <LinearLayout
                android:id="@+id/llFilters"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/svMain"
                >

                <FrameLayout
                    android:id="@+id/llSorting"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rounded_white"
                    android:backgroundTint="@color/colorTranslucentGray"
                    >

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/iivSortingType"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12dp"
                        app:iiv_color="@color/colorWhite"
                        app:iiv_icon="cmd-folder-clock-outline"
                        android:background="@drawable/rounded_white"
                        android:backgroundTint="?attr/colorPrimary"
                        android:layout_gravity="start"
                        />

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/iivSortingDirection"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12dp"
                        app:iiv_color="@color/colorWhite"
                        app:iiv_icon="cmd-sort-descending"
                        android:background="@drawable/rounded_white"
                        android:backgroundTint="?attr/colorPrimary"
                        android:layout_gravity="end"
                        />

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/llFilteredArtifact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="12dp"
                    android:background="@drawable/rounded_white"
                    android:backgroundTint="?attr/colorPrimary"
                    >

                    <TextView
                        android:id="@+id/tvFilteredArtifactTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Viewing in: Filtered Artifact Title"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorWhite"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/iivUnFilterArtifact"
                        />

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/iivUnFilterArtifact"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="12dp"
                        app:iiv_color="@color/colorWhite"
                        app:iiv_icon="cmd-close"
                        android:background="@drawable/rounded_padded_clickable"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvExplore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Explore"
                android:layout_below="@+id/llFilters"
                />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="(empty)"
                android:layout_below="@+id/tvExplore"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
